<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".SendInitFragment"
              android:baselineAligned="false"
              android:paddingLeft="32dp"
              android:paddingTop="32dp"
              android:paddingRight="32dp"
              android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.journeyapps.barcodescanner.CompoundBarcodeView
            android:id="@+id/si_qrscanner"
            android:layout_width="256dp"
            android:layout_height="256dp"/>

        <ImageView
            android:id="@+id/si_image_qrcode"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:visibility="invisible"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/si_text_amount"
        android:layout_marginTop="32dp"
        android:text="@string/si_text_scan_code"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/si_text_receiver"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:gravity="bottom|right"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/si_button_scan_again"
            android:id="@+id/si_button_scan_again"
            android:layout_marginRight="8dp"
            android:enabled="false"
            android:focusable="false"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/si_button_pay"
            android:id="@+id/si_button_pay"
            style="@style/Widget.AppCompat.Button.Colored"
            android:enabled="false"
            android:clickable="true"
            />
    </LinearLayout>

</LinearLayout>
